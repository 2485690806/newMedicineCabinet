<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:elevation="3dp"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_machine_layers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top|center"
        android:orientation="vertical">

        <!-- 第一行RadioButton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="top|center">

            <RadioButton
                android:id="@+id/rb_layer_1"
                style="@style/MyRadioButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/machine_number_radio_selector_xml"
                android:gravity="center"
                android:text="1"
                android:checked="true"
                android:textColor="#FFFFFF"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/rb_layer_2"
                style="@style/MyRadioButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/machine_number_radio_selector_xml"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/rb_layer_3"
                style="@style/MyRadioButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/machine_number_radio_selector_xml"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/rb_layer_4"
                style="@style/MyRadioButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/machine_number_radio_selector_xml"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/rb_pick_layer"
                style="@style/MyRadioButton"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/radio_btn_selector"
                android:gravity="center"
                android:text="@string/pickup_layer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/item_main_machine_status" />
        </LinearLayout>

        <!-- 第二行RadioButton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="top|center">

            <RadioButton
                android:id="@+id/rb_layer_5"
                style="@style/MyRadioButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/machine_number_radio_selector_xml"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/rb_layer_6"
                style="@style/MyRadioButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/machine_number_radio_selector_xml"
                android:gravity="center"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/rb_layer_7"
                style="@style/MyRadioButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/machine_number_radio_selector_xml"
                android:gravity="center"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/rb_layer_8"
                style="@style/MyRadioButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/machine_number_radio_selector_xml"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/rb_recycle_layer"
                style="@style/MyRadioButton"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/radio_btn_selector"
                android:gravity="center"
                android:text="@string/recycling_layer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fragment_layer_test" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="top|center">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/layer_test_number_bacc"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_direction"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_the_direction"
                    android:textAllCaps="true"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layer_test_number_bacc"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_step_count"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_the_steps"
                    android:textAllCaps="true"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_save_setting"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yijianpaizhao_bac"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 右侧文字 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_settings"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />
        </LinearLayout>
    </RadioGroup>
</LinearLayout>
