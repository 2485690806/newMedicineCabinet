<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ypg_bacc">


    <include
        android:id="@+id/item_camera_top"
        layout="@layout/item_camera_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/camera_area_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- 摄像头1区域 -->

        <!-- 摄像头2区域 -->
        <include
            android:id="@+id/camera_area_1"
            layout="@layout/camera_area"
            android:layout_width="0dp"
            android:layout_height="470dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />

        <!-- 摄像头2区域 -->
        <include
            android:id="@+id/camera_area_2"
            layout="@layout/camera_area"
            android:layout_width="0dp"
            android:layout_height="470dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />

        <!-- 摄像头3区域 -->
        <include
            android:id="@+id/camera_area_3"
            layout="@layout/camera_area"
            android:layout_width="0dp"
            android:layout_height="470dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <!-- 复选框容器（支持多选） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center"
            android:orientation="vertical">

            <!-- 复选框行容器 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <!-- 1号复选框（默认选中） -->
                <CheckBox
                    android:id="@+id/cb_1"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 2号复选框 -->
                <CheckBox
                    android:id="@+id/cb_2"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 3号复选框 -->
                <CheckBox
                    android:id="@+id/cb_3"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 4号复选框 -->
                <CheckBox
                    android:id="@+id/cb_4"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 5号复选框 -->
                <CheckBox
                    android:id="@+id/cb_5"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 6号复选框 -->
                <CheckBox
                    android:id="@+id/cb_6"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 7号复选框 -->
                <CheckBox
                    android:id="@+id/cb_7"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 8号复选框 -->
                <CheckBox
                    android:id="@+id/cb_8"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 9号复选框 -->
                <CheckBox
                    android:id="@+id/cb_9"
                    style="@style/MyCheckBox"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/machine_number_radio_selector_xml"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <!-- 取货层复选框 -->
                <CheckBox
                    android:id="@+id/cb_pick"
                    style="@style/MyCheckBox"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/radio_btn_selector"
                    android:gravity="center"

                    android:text="@string/pickup_layer"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/item_main_machine_status" />

                <!-- 回收层复选框 -->
                <CheckBox
                    android:id="@+id/cb_recycle"
                    style="@style/MyCheckBox"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/radio_btn_selector"
                    android:gravity="center"
                    android:text="@string/recycling_layer"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/item_main_machine_status" />

                <!-- 一键拍照按钮 -->
                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/yijianpaizhao_bac"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick="snapDevice"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/one_key_photo"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <RadioButton
                        android:id="@+id/rb_layer_1"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="1"
                        android:checked="true"
                        android:textColor="#FFFFFF"
                        android:elevation="8dp"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/rb_layer_2"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="2"
                        android:elevation="8dp"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/rb_layer_3"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="3"
                        android:elevation="8dp"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/rb_layer_4"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />



                    <RadioButton
                        android:id="@+id/rb_layer_5"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/rb_layer_6"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/rb_layer_7"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/rb_layer_8"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/rb_layer_9"
                        style="@style/MyRadioButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/machine_number_radio_selector_xml"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/rb_pick_layer"
                        style="@style/MyRadioButton"
                        android:layout_width="110dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/radio_btn_selector"
                        android:gravity="center"
                        android:text="@string/pickup_layer"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/item_main_machine_status" />

                    <RadioButton
                        android:id="@+id/rb_recycle_layer"
                        style="@style/MyRadioButton"
                        android:layout_width="110dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/radio_btn_selector"
                        android:gravity="center"
                        android:text="@string/recycling_layer"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/fragment_layer_test" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/layer_test_number_bacc"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_step_count"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/enter_the_steps"
                        android:inputType="number"
                        android:textColor="#000000"

                        android:textColorHint="#808080"
                        android:textSize="20dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_save_setting"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/yijianpaizhao_bac"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <!-- 右侧文字 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save_settings"
                        android:textColor="#FFFFFF"
                        android:textSize="17dp" />
                </LinearLayout>



                <!-- 复位选项 -->
                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="23dp">

                    <!-- 透明的RadioButton（用于单选逻辑） -->
                    <RadioButton
                        android:id="@+id/rb_reposition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_btn_selector"
                        android:button="@null"
                        android:checked="true"
                        android:focusable="true" />

                    <!-- 实际显示的内容布局 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/reposition_img" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="8dp"
                            android:text="@string/reposition"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/dummy_focus_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</androidx.constraintlayout.widget.ConstraintLayout>