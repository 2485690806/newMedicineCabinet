<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:elevation="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RadioGroup
        android:id="@+id/rg_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 第一行：上升、下降 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <!-- 上升选项 -->
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="45dp">

                <!-- 透明的RadioButton（用于单选逻辑） -->
                <RadioButton
                    android:id="@+id/rb_rise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_btn_selector"
                    android:button="@null"
                    android:focusable="true" />

                <!-- 实际显示的内容布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/rise_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/rise"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- 下降选项 -->
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginStart="23dp">

                <!-- 透明的RadioButton（用于单选逻辑） -->
                <RadioButton
                    android:id="@+id/rb_decline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_btn_selector"
                    android:button="@null"
                    android:focusable="true" />

                <!-- 实际显示的内容布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/decline_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/decline"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <!-- 第二行：停止、复位 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <!-- 停止选项 -->
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="45dp">

                <!-- 透明的RadioButton（用于单选逻辑） -->
                <RadioButton
                    android:id="@+id/rb_stop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_btn_selector"
                    android:button="@null"
                    android:checked="true"
                android:focusable="true" />

                <!-- 实际显示的内容布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/stop_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/stop"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- 复位选项 -->
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginStart="23dp">

                <!-- 透明的RadioButton（用于单选逻辑） -->
                <RadioButton
                    android:id="@+id/rb_reposition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_btn_selector"
                    android:button="@null"
                    android:focusable="true" />

                <!-- 实际显示的内容布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/reposition_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/reposition"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RadioGroup>


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/machine_test_right_bac"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:textColor="@color/white">


            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_status"
                android:textColor="#FFF596"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>