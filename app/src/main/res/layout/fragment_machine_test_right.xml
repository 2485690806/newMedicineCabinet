<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:elevation="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 正转选项 -->
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="45dp">

            <!-- 透明RadioButton（处理单选逻辑） -->
            <RadioButton
                android:id="@+id/rb_forward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
            android:focusable="true" />

            <!-- 实际显示内容 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/production_opinion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/positive_rotation"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- 反转选项 -->
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp">

            <!-- 透明RadioButton（处理单选逻辑） -->
            <RadioButton
                android:id="@+id/rb_reverse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                android:focusable="true" />

            <!-- 实际显示内容 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/reverse_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/rollback"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- 停止选项 -->
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp">

            <!-- 透明RadioButton（处理单选逻辑） -->
            <RadioButton
                android:id="@+id/rb_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                android:checked="true"
                android:focusable="true" />

            <!-- 实际显示内容 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/stop_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/stop"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>

    </RadioGroup>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/machine_test_right_bac"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center|top"
            android:textColor="@color/white">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/tv_upper_door_open"
                android:text="上侧门打开限位"
                android:textColor="#FFF596"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_upper_door_open_status"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="有"
                android:textColor="#FFF596"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center|top"
            android:textColor="@color/white">

            <TextView
                android:id="@+id/tv_upper_door_close"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上侧门关闭限位"
                android:textColor="#FFF596"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_upper_door_close_status"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="有"
                android:textColor="#FFF596"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>