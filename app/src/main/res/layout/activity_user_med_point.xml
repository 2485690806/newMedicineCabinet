<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_code"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter code"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:text=""
            android:focusable="true"
            android:focusableInTouchMode="true"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/mainlinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/mainlinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- Accept button -->
        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF5722"
            android:onClick="Accept"
            android:text="Accept"
            android:textSize="16sp" />

        <!-- Error message (always visible, red) -->
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Error code"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Dispensing message (always visible, green) -->
        <TextView
            android:id="@+id/tv_dispensing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispensing"
            android:textColor="#00AA00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 第一个摄像头区域 -->
        <LinearLayout
            android:id="@+id/camera_area_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 摄像头1区域 -->

            <!-- 摄像头2区域 -->
            <include
                android:id="@+id/camera_area_1"
                layout="@layout/camera_area_invisity"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />

            <!-- 摄像头2区域 -->
            <include
                android:id="@+id/camera_area_2"
                layout="@layout/camera_area_invisity"
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />

            <!-- 摄像头3区域 -->
            <include
                android:id="@+id/camera_area_3"
                layout="@layout/camera_area_invisity"
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/sendCmd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/recCmd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>


    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/cIdleBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:autoTurningTime="5000"
        app:canLoop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <View-->
<!--        android:id="@+id/dummy_focus_view"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:focusable="true"-->
<!--        android:focusableInTouchMode="true" />-->

    <View
        android:id="@+id/viewStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/backToSetting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="100S"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
