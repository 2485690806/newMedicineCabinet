<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:elevation="3dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="top|center">

            <RadioButton
                android:id="@+id/rb_layer_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="1"
                android:elevation="8dp"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

            <RadioButton
                android:id="@+id/rb_layer_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

            <RadioButton
                android:id="@+id/rb_layer_3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

            <RadioButton
                android:id="@+id/rb_layer_4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="top|center">

            <RadioButton
                android:id="@+id/rb_layer_5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

            <RadioButton
                android:id="@+id/rb_layer_6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

            <RadioButton
                android:id="@+id/rb_layer_7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

            <RadioButton
                android:id="@+id/rb_layer_8"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

            <RadioButton
                android:id="@+id/rb_layer_9"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                style="@style/MyRadioButton"
                android:background="@drawable/machine_number_radio_selector_xml"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="top|center">

            <!-- 复位选项 -->
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="45dp">

                <!-- 透明的RadioButton（用于单选逻辑） -->
                <RadioButton
                    android:id="@+id/rb_reposition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_btn_selector"
                    android:button="@null"
                    android:checked="true"
                    android:focusable="true" />

                <!-- 实际显示的内容布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/reposition_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/reposition"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <RadioButton
                android:id="@+id/rb_pick_layer"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="@string/pickup_layer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fragment_layer_test"
                style="@style/MyRadioButton"
                android:background="@drawable/radio_btn_selector"/>


            <RadioButton
                android:id="@+id/rb_recycle_layer"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="@string/recycling_layer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fragment_layer_test"
                style="@style/MyRadioButton"
                android:background="@drawable/radio_btn_selector"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_status_container"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/machine_test_right_bac"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_status"
                    android:textColor="#FFF596"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>
    </RadioGroup>

</LinearLayout>
